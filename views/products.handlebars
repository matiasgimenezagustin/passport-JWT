    const renderProducts = (products, role) =>{
        let resultHTML = ''
        products.forEach(prod =>{

            if(role == 'user'){
                resultHTML += `
                <div>
                    <h2>${prod.title}</h2>
                    <p>${prod.description}</p>
                    
