                </div>
            `
            }
            else{
                resultHTML += `
                <div>
                    <h2>${prod.title}</h2>
                    <p>${prod.description}</p>
                    
                    <button id="btn-delete-${prod._id}" class="btn-delete">Eliminar</button>
                </div>`
            }
            
            listProductsHTML.innerHTML = resultHTML
        })
        if(role =='user'){
             const btsAddCart = document.getElementsByClassName('btn-add')
            for(const boton of btsAddCart){
                boton.addEventListener('click',() =>{
                    const idProdToAdd = boton.id.split('-').pop()
                    console.log(idProdToAdd)

                    addProductToCart(idProdToAdd)
                })
            }
        }
        else{
            const btnsDeleteProduct = document.getElementsByClassName('btn-delete')
            for(const boton of btnsDeleteProduct){
                boton.addEventListener('click',() =>{
                    const idProdToAdd = boton.id.split('-').pop()

                    deleteProduct(idProdToAdd)
                })
            }

        }
       
        
    }
    
